MDScreen:
    name:"downloads"
    on_enter:app.on_downloads_active()
    MDBoxLayout:
        MDTopAppBar:
            id: toolbar
            title: "Downloads"
            left_action_items: [["chevron-up-circle-outline", lambda x: app.nav(root,'down')]]
            right_action_items: [["magnify"], ["dots-vertical"]]
            pos_hint: {"top": 1}
            elevation:0
            type_height:"small"
            md_bg_color: 0, 0, 0, .01
            font_name: 'MPoppins'
            font_size: "20sp"
            specific_text_color:app.COLORS['PRI']
    MDFloatLayout:
            #on_release: 
            #    root.manager.transition.direction = "down"
            #    root.manager.current = "search"
                        
        MDScrollView:
            orientation: 'vertical'
            spacing: dp(10)
            size_hint_x: .92
            padding: dp(20)
            pos_hint: {'center_x': .5, 'center_y': .47}
            size_hint_y:.9
            MDSelectionList:
                id: selection_list
                spacing: "12dp"
                icon_bg_color: app.COLORS['LPRI']
                on_selected: app.on_selected(*args)
                on_unselected: app.on_unselected(*args)
                on_selected_mode: app.set_selection_mode(*args)
            